{
  "info": {
    "name": "Unified Enhanced API - Developer Handoff",
    "description": "Comprehensive API collection for the Unified Document Management & Contact Intelligence System",
    "version": "3.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "noauth"
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set base URL",
          "pm.environment.set('baseUrl', 'https://api.demo-pretamane.com');",
          "",
          "// Generate test data",
          "pm.environment.set('testContactId', 'test_contact_' + Date.now());",
          "pm.environment.set('testDocumentId', 'test_doc_' + Date.now());",
          "pm.environment.set('testEmail', 'test+' + Date.now() + '@example.com');"
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://api.demo-pretamane.com",
      "type": "string"
    },
    {
      "key": "testContactId",
      "value": "test_contact_123",
      "type": "string"
    },
    {
      "key": "testDocumentId",
      "value": "test_doc_123",
      "type": "string"
    },
    {
      "key": "testEmail",
      "value": "test@example.com",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "üè• Health & Status",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            },
            "description": "Comprehensive health check with service status and diagnostics"
          },
          "response": []
        },
        {
          "name": "API Information",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/",
              "host": ["{{baseUrl}}"],
              "path": [""]
            },
            "description": "API information and feature overview"
          },
          "response": []
        }
      ]
    },
    {
      "name": "üìù Contact Forms",
      "item": [
        {
          "name": "Enhanced Contact Form",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"{{testEmail}}\",\n  \"message\": \"Interested in your services. This is a test message from Postman.\",\n  \"company\": \"Acme Corporation\",\n  \"service\": \"Web Development\",\n  \"budget\": \"$10,000 - $50,000\",\n  \"source\": \"postman-test\",\n  \"userAgent\": \"Postman Runtime\",\n  \"pageUrl\": \"https://test.demo-pretamane.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/contact",
              "host": ["{{baseUrl}}"],
              "path": ["contact"]
            },
            "description": "Enhanced contact form submission with document processing capabilities"
          },
          "response": []
        },
        {
          "name": "Basic Contact Form",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Jane Smith\",\n  \"email\": \"{{testEmail}}\",\n  \"message\": \"Basic test message from Postman\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/contact/basic",
              "host": ["{{baseUrl}}"],
              "path": ["contact", "basic"]
            },
            "description": "Basic contact form submission (legacy endpoint)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "üìÑ Document Management",
      "item": [
        {
          "name": "Upload Document",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": [],
                  "description": "Document file to upload"
                },
                {
                  "key": "contact_id",
                  "value": "{{testContactId}}",
                  "type": "text",
                  "description": "Associated contact ID"
                },
                {
                  "key": "document_type",
                  "value": "proposal",
                  "type": "text",
                  "description": "Type of document"
                },
                {
                  "key": "description",
                  "value": "Test document uploaded via Postman",
                  "type": "text",
                  "description": "Document description"
                },
                {
                  "key": "tags",
                  "value": "test,postman,documentation",
                  "type": "text",
                  "description": "Comma-separated tags"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/documents/upload",
              "host": ["{{baseUrl}}"],
              "path": ["documents", "upload"]
            },
            "description": "Upload document with metadata and contact association"
          },
          "response": []
        },
        {
          "name": "Search Documents",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"test document\",\n  \"filters\": {\n    \"document_type\": \"proposal\",\n    \"contact_id\": \"{{testContactId}}\"\n  },\n  \"limit\": 10\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/documents/search",
              "host": ["{{baseUrl}}"],
              "path": ["documents", "search"]
            },
            "description": "Search documents with advanced filtering and OpenSearch integration"
          },
          "response": []
        },
        {
          "name": "Get Contact Documents",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/contacts/{{testContactId}}/documents",
              "host": ["{{baseUrl}}"],
              "path": ["contacts", "{{testContactId}}", "documents"]
            },
            "description": "Get all documents for a specific contact"
          },
          "response": []
        }
      ]
    },
    {
      "name": "üìä Analytics & Statistics",
      "item": [
        {
          "name": "System Analytics",
          "request": {
