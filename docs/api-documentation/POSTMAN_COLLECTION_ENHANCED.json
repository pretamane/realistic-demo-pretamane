                }
              },
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "exec": [
                      "if (pm.response.code === 200) {",
                      "    const response = pm.response.json();",
                      "    pm.environment.set('workflowDocumentId', response.document_id);",
                      "    console.log('Document ID saved:', response.document_id);",
                      "}"
                    ]
                  }
                }
              ]
            },
            {
