        {
          "name": "Visitor Statistics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/stats",
              "host": ["{{baseUrl}}"],
              "path": ["stats"]
            },
            "description": "Visitor statistics and system metrics"
          },
          "response": []
        }
      ]
    },
    {
      "name": "‚öôÔ∏è Admin Endpoints",
      "item": [
        {
          "name": "Background Processor Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/background-status",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "background-status"]
            },
            "description": "Background processor status and task information"
          },
          "response": []
        },
        {
          "name": "Process S3 Event",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bucket\": \"realistic-demo-pretamane-data\",\n  \"key\": \"documents/test/test-document.txt\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/process-s3-event",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "process-s3-event"]
            },
            "description": "Process S3 event in background (admin endpoint)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "üß™ Testing Scenarios",
      "item": [
        {
          "name": "Complete Workflow Test",
          "item": [
            {
              "name": "1. Submit Contact",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"name\": \"Workflow Test User\",\n  \"email\": \"workflow@example.com\",\n  \"message\": \"Testing complete workflow\",\n  \"company\": \"Test Corp\",\n  \"service\": \"Testing\",\n  \"budget\": \"$5,000 - $10,000\"\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/contact",
                  "host": ["{{baseUrl}}"],
                  "path": ["contact"]
                }
              },
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "exec": [
                      "if (pm.response.code === 200) {",
                      "    const response = pm.response.json();",
                      "    pm.environment.set('workflowContactId', response.contactId);",
                      "    console.log('Contact ID saved:', response.contactId);",
