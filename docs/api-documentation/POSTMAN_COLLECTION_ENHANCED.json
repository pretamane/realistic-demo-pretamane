                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"query\": \"workflow test\",\n  \"filters\": {\n    \"contact_id\": \"{{workflowContactId}}\"\n  },\n  \"limit\": 5\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/documents/search",
                  "host": ["{{baseUrl}}"],
